@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {


            $(".ADD").click(function () {
                insertConfig();
            });
            $('#item_card_type').change(function () {
                if ($('#item_card_type option:selected').val() == '') {
                    $('#button').attr('disabled', true);
                }
                else {
                    $('#button').attr('disabled', false);
                }


            });
            function insertConfig() {
                var dataObject = {
                    'ProductItem': $('#item_card_type option:selected').val(),
                    'PaperGSM': $('#jc_paper_gsm option:selected').val(),
                    'PaperColour': $('#PaperColor option:selected').val(),
                    'PaperSize': $('#jobcard_paper_size option:selected').val(),
                    'PaperQuality': $('#Paper_Quality option:selected').val(),
                    'PaperSides': $('#PaperSideId option:selected').val(),
                    'LedgerFalio': $('#LedgerFalio option:selected').val(),
                    'AdditionalPaperCount': $('#AddPaperCount').val(),
                    'AdditionalPaperSize': $('#AddPaperSize option:selected').val(),
                    'AdditonalPaperGSM': $('#Addpaper_gsm option:selected').val(),
                    'MinRange': $('#Min').val(),
                    'MaxRange': $('#max').val(),
                    'Amount': $('#Amount').val(),
                    'CreatedBy': 'Admin',
                    'UpdatedBy': 'Admin',

                };

                // prevent the default event behaviour    


                $.ajax({
                    url: "/Config/InsertConfig",
                    type: "POST",
                    data: JSON.stringify({ 'obj': dataObject }),
                    traditional: true,
                    async: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $('#message').html("The Configuration has be saved successfully!");
                    },
                    error: function (error) {
                        $('#message').html("Connection Error!");
                    }
                });
            }
        });



    </script>}
