@{
    ViewBag.Title = "Configurations";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example1').dataTable({ "order": [[0, "desc"]] });

        var elements = $(".job-status");

        for (var i = 0; i < elements.length; i++) {
            element = $(elements[i]);
            element.val(element.attr("value"));
        }
    })</script>
<div class="page-content inset well center" style="width:100%;padding:15px" id="page-content-wrapper" align="center">
    <h3 style="color: #fff;background-color: #428bca;">Configurations</h3>
    <div class="add-btn">@Html.ActionLink("ADD", "AddConfig", "Config")</div>
    <div class="table-cont" align="center">
        <table id="example1" class="display table table-bordered " cellspacing="0" width="100%">

            <thead>
                <tr>
                    <th>Order Config Id</th>
                    <th>Product Item</th>
                    <th>Paper GSM</th>
                    <th>Paper Colour</th>
                    <th>Paper Size</th>
                    <th>Paper Quality</th>
                    <th>Paper Sides</th>
                    <th>Ledger Falio</th>
                    <th>Additional Paper Count</th>
                    <th>Additional Paper Size</th>
                    <th>Additonal Paper GSM</th>
                    <th>Per Book Bill Count</th>
                    <th>Min Range</th>
                    <th>Max Range</th>
                    <th>Amount</th>
                    <th>Last Modified By</th>
                    <th>Last Modified Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.OrderConfigurationId<div class="update-btn">@Html.ActionLink("UPDATE", "UpdateConfig", "Config")</div></td>
                        <td>@item.ProductItem</td>
                        <td>@item.PaperGSM</td>
                        <td>@item.PaperColour</td>
                        <td>@item.PaperSize</td>
                        <td>@item.PaperQuality</td>
                        <td>@item.PaperSides</td>
                        <td>@item.LedgerFalio</td>
                        <td>@item.AdditionalPaperCount</td>
                        <td>@item.AdditionalPaperSize</td>
                        <td>@item.AdditonalPaperGSM</td>
                        <td>@item.PerBookBillCount</td>
                        <td>@item.MinRange</td>
                        <td>@item.MaxRange</td>
                        <td>@item.Amount</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
