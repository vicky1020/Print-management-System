<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body class="@ViewBag.Class">
        <div class="header-cont">
            <div class="menu-cont">
                <div class="menu-text">Menu</div>
            </div>
            <div class="heading-cont">
                <div class="heading-text">Print Management System</div>
            </div>
            <div class="profile-cont">
                <div class="profile-user">Hi Admin</div>
                <div class="profile-logout">@Html.ActionLink("LogOut", "Login", "Account")</div>
            </div>
        </div>
        <div class="side-navbar">
            <div class="menu-text">Menu</div>
            <div class="menu-item">@Html.ActionLink("Jobs", "Index", "Home")</div>
            <div class="menu-item">@Html.ActionLink("Orders", "Report", "Home")</div>
            <div class="menu-item">@Html.ActionLink("Configurator", "Report", "Home")</div>
            <div class="menu-item">@Html.ActionLink("Report", "Report", "Home")</div>

        </div>
        <div class="body-cont">
            <div class="body-content">
                @RenderBody()
            <hr />
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
        <link href="~/Content/DataTables/css/dataTables.jqueryui.css" rel="stylesheet" />
        <script src="https://cdn.datatables.net/1.10.16/css/dataTables.jqueryui.min.css"></script>
        <link href="~/Content/Site.css" rel="stylesheet" />
        <script src="https://cdn.datatables.net/1.10.16/css/dataTables.jqueryui.min.css"></script>
        <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
        <script src="~/Scripts/DataTables/dataTables.jqueryui.min.js"></script>
        <script src="~/Scripts/DataTables/responsive.jqueryui.min.js"></script>
        <script src="//code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.16/js/dataTables.jqueryui.min.js"></script>
        <script src="~/Scripts/custom.js"></script>
        @RenderSection("scripts", required: false)
        <div class="col-sm-2"></div>
    </body>
</html>
